        android:id="@+id/frame_layout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">

        <TableLayout
            android:id="@+id/table_weekly"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>

